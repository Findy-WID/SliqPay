{
  "version": 2,
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "rootDirectory": "backend"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "rootDirectory": "front-end"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/api/:path*"
    }
  ]
}
