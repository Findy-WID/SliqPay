{
  "name": "sliqpay",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "backend",
    "front-end"
  ],
  "scripts": {
    "dev:fe": "npm run dev --workspace front-end",
    "dev:be": "npm run dev --workspace backend",
    "dev": "concurrently \"npm:dev:fe\" \"npm:dev:be\"",
    "build:fe": "next build",
    "build:be": "npm run build --workspace backend",
    "build": "npm run build:fe && npm run build:be",
    "start:fe": "next start",
    "start:be": "npm run start --workspace backend",
    "start": "concurrently \"npm:start:fe\" \"npm:start:be\"",
    "lint": "next lint && npm run lint --workspace backend",
    "typecheck": "tsc --noEmit && npm run typecheck --workspace backend"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@tailwindcss/vite": "^4.1.11",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "tailwindcss": "^4.1.11",
    "typescript": "^5"
  }
}
